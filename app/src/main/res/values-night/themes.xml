<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Coffee" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/lightBlue</item> <!-- toolbar -->
        <item name="colorAccent">@color/darkBlue</item>
        <item name="android:windowBackground">@color/darkbg</item>
        <item name="android:textColorPrimary">@color/lightBlue</item>
        <item name="android:textColor">@color/lightBlue</item> <!-- normal textView -->
        <item name="android:textColorPrimaryDisableOnly">@color/lightBlue</item> <!-- radios & checkboxes -->
        <item name="rippleColor">@color/darkRipple</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/darkbg</item>
        <item name="iconTint">@color/darkbg</item>
    </style>

    <style name="toolBarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/lightBlue</item>
        <item name="android:textColor">@color/darkbg</item>
    </style>
</resources>